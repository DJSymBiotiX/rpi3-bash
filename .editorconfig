root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,py}]
charset = utf-8

# Makefile needs to use tabs
[Makefile]
indent_style = tab

# 2 space indents
[*.{js,html,css,json,yml}]
indent_style = space
indent_size = 2

# 4 space indents
[*.py]
indent_style = space
indent_size = 4
